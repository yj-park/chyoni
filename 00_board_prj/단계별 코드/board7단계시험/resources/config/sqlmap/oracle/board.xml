<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.board.dao.BoardMapper">
	<resultMap id="boardMap" type="board" >
		<result property="no" column="no"/>
		<result property="writer" column="writer"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="regDate" column="reg_date"/>
	</resultMap>

    <select id="getBoardList" resultMap="boardMap">
    	select no, 
    	       title, 
    	       writer, 
    	       reg_date
    	  from tb_board
    	 order by no desc
    </select> 
   
    <select id="getBoardOne" parameterType="int" resultMap="boardMap">
    	select no, 
    	       title, 
    	       writer, 
    	       content, 
    	       reg_date  
    	  from tb_board 
    	 where no = #{no}
    </select> 
    
    <insert id="insertBoard" parameterType="board">
		insert into tb_board(
		   	no, 
		    title, 
		    writer, 
		    content
		) values (
		  s_board_no.nextval,
		  <!-- 시퀀스 번호를 쓰지 않는 경우 (select max(no) from tb_board) + 1 사용 가능-->
		  #{title},
		  #{writer},
		  #{content}
		)    
    </insert>
    
    <update id="updateBoard" parameterType="board">
    	update tb_board
    	   set title = #{title}
    	 where no = #{no}
    </update>
    
    <delete id="deleteBoard" parameterType="int">
    	delete 
    	  from tb_board
    	 where no = #{no}
    </delete>
</mapper>